<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/textView_Anzeige"
        android:id="@+id/textView_Anzeige"
        android:padding="100px"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonRed"
        android:id="@+id/buttonRed"
        android:layout_below="@+id/textView_Anzeige"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonEnde"
        android:id="@+id/buttonEnde"
        android:layout_below="@+id/textView_Anzeige"
        android:layout_toEndOf="@+id/buttonRed"
        android:layout_marginStart="52dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonYellow"
        android:id="@+id/buttonYellow"
        android:layout_alignTop="@+id/buttonEnde"
        android:layout_alignEnd="@+id/textView_Anzeige" />
</RelativeLayout>
